{
  // git配置
  "git.path": "D:/Program Files/Git/bin/git.exe",
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },

  "terminal.integrated.shell.windows": "D:\\Program Files\\Git\\bin\\bash.exe",
  "terminal.integrated.rendererType": "dom",

  // 工作台
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Monokai",
  // 在未能恢复上一会话信息的情况下，控制启动时显示的编辑器。选择 "none" 表示启动时不打开编辑器，"welcomePage" 表示打开欢迎页面(默认)，"newUntitledFile" 表示打开新的无标题文档(仅打开一个空工作区)。
  "workbench.startupEditor": "welcomePage",

  // 编辑器配置
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.foldingHighlight": false,
  "editor.lineHeight": 18,
  "editor.letterSpacing": 0.2,
  "editor.fontWeight": "400",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "solid",
  //每次保存自动格式化
  "editor.formatOnSave": true,
  // vscode 默认启用了根据文件类型自动设置 tabsize 的选项
  "editor.detectIndentation": false,
  // 重新设定 tabsize
  "editor.tabSize": 2,
  // 控制键入时是否应自动显示建议
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggestSelection": "first",
  "editor.codeActionsOnSave": {
    // For ESLint
    "source.fixAll.eslint": true,
    // For TSLint
    "source.fixAll.tslint": true,
    // For Stylelint
    "source.fixAll.stylelint": true
  },
  // 控制编辑器在空白字符上显示特殊符号的方式。
  "editor.renderWhitespace": "none",
  // 控制编辑器是否应呈现控制字符
  "editor.renderControlCharacters": false,
  // 控制在资源管理器内拖放移动文件或文件夹时是否进行确认。
  "explorer.confirmDragAndDrop": false,
  // 控制是否应在遇到提交字符时接受建议。例如，在 JavaScript 中，分号(";")可以为提交字符，可接受建议并键入该字符。
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.renderIndentGuides": true,

  "emmet.showAbbreviationSuggestions": true,
  "emmet.showExpandedAbbreviation": "always",
  "element-helper.version": "2.3",
  // jsx 的 emmet 补全
  "emmet.includeLanguages": {
    "vue-html": "html",
    "vue": "html",
    "javascript": "javascriptreact",
    "wxml": "html"
  },
  // 启用后，按下 TAB 键，将展开 Emmet 缩写。
  "emmet.triggerExpansionOnTab": false,

  // 每行最大字符数(0 = 禁用)。
  "html.format.wrapLineLength": 70,

  "explorer.confirmDelete": false,
  "window.zoomLevel": 0,

  // Default formatter for <template> region
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  //让 vue 中的 js 按编辑器自带的 ts 格式进行格式化
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "vetur.format.defaultFormatterOptions": {
    "prettier": {
      "semi": true
    }
  },

  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 8050,
  "liveServer.settings.root": "/src",
  "liveServer.settings.CustomBrowser": "chrome",
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "chrome --incognito --remote-debugging-port=9222",
  "liveServer.settings.NoBrowser": false,
  "liveServer.settings.ignoreFiles": [".vscode/**", "**/*.scss", "**/*.sass"],

  // 编辑器忽略以下的文件
  "files.exclude": {
    "*/.git": true
  },
  "files.associations": {
    "*.vue": "vue",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript"
  },

  // Use 'prettier-eslint' instead of 'prettier'. Other settings will only be fallbacks in case they could not be inferred from eslint rules.
  "prettier-eslint.eslintIntegration": true,
  // 是否使用单引号替代双引号
  "prettier.singleQuote": true,
  // 是否在每行的末尾添加分号
  "prettier.semi": true,

  // 在函数参数括号前定义空格处理。需要 TypeScript >= 2.1.5。
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.updateImportsOnFileMove.enabled": "never",

  "sync.gist": "dd38f8c37bc6f07d381820a0cbd24dc4",

  "minapp-vscode.disableAutoConfig": true,
  "sync.forceUpload": false,

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "eslint.options": {
    "plugins": ["html"]
  },
  "eslint.enable": true,
  "eslint.quiet": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "css"
  ]
}
